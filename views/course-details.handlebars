<div class="container">
    <h1 class="my-4">{{course.title}}</h1>
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="{{course.imageUrl}}" alt="{{course.title}}" />
        </div>

        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{course.description}}</p>

            {{#if creator}}
            <a class="btn btn-danger" href="/">Delete</a>
            <a class="btn btn-warning" href="/edit-course/{{course._id}}"">Edit</a>
            {{/if}}

            {{#if enrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{/if}}
            {{#unless enrolled}}
            <a class="btn btn-primary" href="/">Enroll</a>
            {{/unless}}
        </div>
    </div>
</div>